<div class="row clearfix">
  <% if item.completed? %>
    <div class="complete">
      <%= link_to "Mark as Complete", todo_item_path(@todo, item.id), method: :patch %>
    </div>
    <div class="item">
      <p style="opacity: 0.4;"><strike><%= item.name %></strike></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", todo_item_path(@todo, item.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% else %>
    <div class="complete">
      <%= link_to "Mark as Complete", todo_item_path(@todo, item.id), method: :patch %>
    </div>
    <div class="item">
      <p><%= item.name %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", todo_item_path(@todo, item.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>