<p id="notice"><%= notice %></p>
<div class="columns is-centered">
<div class="column is-half">

  <h1 class="title is-5" style="margin-top: 20px">Feed de ToDos</h1>

  <% @todos.each do | todo | %>
    <div class="box">
      <article class="media">
        <div class="media-left">

        </div>
        <div class="media-content">
          <div class="content">
            <p><%= todo.title %></p>
          </div>

            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to todo, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_todo_path(todo), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to todo, method: :delete, data: { confirm: "Are you sure you want to delete this todo?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>

        </div>
      </article>
    </div>
    <button class="button is-info">
      <%= link_to 'Novo Todo', new_todo_path %>
    </button>
    </div>

  <% end %>

</div>
